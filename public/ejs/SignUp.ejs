<body style="background-color:#CACECD">
  <div class="container">
  <form ng-controller="signup" ng-submit="signup()">
    <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    <div class="form-group">
    <div class="container-fluid">
    <h2>Weather Analytics</h2>
    </div>
      <label for="email">Email:</label>
      <input type="text" class="form-control" id="username" ng-model="firstname" placeholder="Enter firstname">
    </div>
    <div class="form-group">
      <label for="pwd">lastname:</label>
      <input type="text" class="form-control" id="pwd" ng-model="lastname" placeholder="Enter lastname">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" ng-model="password" placeholder="Enter password">
    </div>
    <div class="form-group">
      <label for="pwd">Location:</label>
      <input type="text" class="form-control" id="pwd" ng-model="location" placeholder="Enter location">
    </div>
    <div class="form-group">
    	<input type="submit" class="form-control" style="background-color:#68E9C7" value="SignUp">
</div>
  {{todos}}
  </form>
  </div>
  <div class="col-md-4"></div>
  </div>
  <a ui-sref="Login">Login</a>
</div>
  
  </body>